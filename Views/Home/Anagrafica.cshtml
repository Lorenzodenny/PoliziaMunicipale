@{
    ViewData["Title"] = "Dettagli anagrafica";
}
@if (TempData["MessageSuccess"] is not null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["MessageSuccess"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<h2>Anagrafica</h2>

<div class="card mb-3" style="max-width: 700px;">
    <div class="row g-0">
        <div class="col-md-4">
            <span id="popup" class="popup popup-left">Modificami.. non lo diremo a nessuno ;)</span>
            <img src="https://i.pinimg.com/originals/40/4f/63/404f639c5fe57f6f3931a8055a56e7c0.png" class="img-fluid rounded-start" alt="Simpson">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@(Model.Nome) @(Model.Cognome)  - @Model.IDAnagrafica</h5>
                <p class="card-text">@Model.Indirizzo - @Model.Citta - (@Model.CAP)</p>
                <p class="card-text"><small class="text-body-secondary">@Model.Cod_Fisc</small></p>
                <div>
                    <a onmouseover="mostraPopup()" onmouseout="nascondiPopup()" class="btn btn-primary" asp-controller="Home" asp-action="Edit" asp-route-id="@Model.IDAnagrafica">Modifica</a>
                </div>
            </div>
        </div>
    </div>
</div>




<script>
    function mostraPopup() {
        document.getElementById("popup").classList.add("show");
    }

    function nascondiPopup() {
        document.getElementById("popup").classList.remove("show");
    }

</script>